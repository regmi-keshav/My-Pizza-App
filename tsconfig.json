{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsxFactory": "React.createElement",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src",
    "App.tsx",
    "index.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
